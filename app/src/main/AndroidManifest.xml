<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="klavitur_shop">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.UTSPPB">
        <activity
            android:name="com.muffincrunchy.klavitur_shop.DetailActivity"
            android:exported="false"
            android:label="Detail Produk"
            android:parentActivityName="com.muffincrunchy.klavitur_shop.MainActivity" />
        <activity
            android:name="com.muffincrunchy.klavitur_shop.PurchaseActivity"
            android:exported="false"
            android:label="Pembayaran"
            android:parentActivityName="com.muffincrunchy.klavitur_shop.MainActivity" />
        <activity
            android:name="com.muffincrunchy.klavitur_shop.UpdateActivity"
            android:exported="false"
            android:label="Update User"
            android:parentActivityName="com.muffincrunchy.klavitur_shop.MainActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.muffincrunchy.klavitur_shop.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.UTSPPB.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.muffincrunchy.klavitur_shop.LoginActivity"
            android:exported="true"
            android:theme="@style/SplashScreenStyle"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.muffincrunchy.klavitur_shop.MainActivity"
            android:exported="true"
            android:label="Klaviatur Shop"
            android:theme="@style/Theme.UTSPPB.NoActionBar" />
    </application>

</manifest>